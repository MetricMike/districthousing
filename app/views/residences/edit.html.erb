<%= render 'breadcrumb', object: @residence %>

<%= render 'section_tabs', active_section: :residence_history %>

<%= render 'progress', object: @residence %>

<%= bootstrap_form_for(@residence) do |f| %>

  <div class="row">

    <div class="col-md-4">
      <h2>Time period</h2>
      <%= render "fields", f: f %>

      <h2>Residence Address</h2>
      <%= f.fields_for :address do |a| %>
        <% if params[:address_type] == "use_mail_address" %>
          <%= render "addresses/applicant_fields", builder: a %>
        <% else %>
          <%= render "addresses/fields", builder: a %>
          <%= link_to "Use Applicant's Mailing Address", edit_residence_path(address_type: "use_mail_address") %>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-4">
      <h2>Landlord</h2>
      <%= f.fields_for :landlord do |l| %>
        <%= render "people/name", builder: l %>
        <%= render "people/contact", builder: l %>
      <% end%>
    </div>
    <div class="col-md-4">
      <h3>Landlord's address</h2>
      <%= f.fields_for :landlord do |l| %>
        <%= l.fields_for :mail_address do |m| %>
          <%= render "addresses/fields", builder: m %>
        <% end %>
      <% end %>
    </div>

  </div>

  <%= render "buttons_update_back", f: f %>
<% end %>

<%= link_to 'Delete', @residence, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
